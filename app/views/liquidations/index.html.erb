<div class="row">
  <div class="col s12 m12 l12">
    <div class="row">
      <h4 class="center-align">Liquidaciones</h4>
    </div>
    <div class="row">
      <table>
        <thead>
          <tr>
            <th>Camion</th>
            
            <th>Turno</th>
            <th>Efectivo</th>
            <th>Gastos</th>
            <th>Terreno</th>
            <th>Ahorro</th>
            <th>Otro</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @liquidations.each do |liquidation| %>
            <tr>
              <td><%= liquidation.camion %></td>
              
              <td><%= liquidation.turno %></td>
              <td><%= liquidation.efectivo %></td>
              <td><%= liquidation.gastos %></td>
              <td><%= liquidation.terreno %></td>
              <td><%= liquidation.ahorro %></td>
              <td><%= liquidation.otro %></td>
              <td class="right" >
                <%= link_to 'Ver', liquidation, class: 'btn blue white-text' %>
                <%= link_to 'Editar', edit_liquidation_path(liquidation), class: 'btn' %>
                <% if current_user.nivel == 1 %>
                <%= link_to 'Eliminar', liquidation, method: :delete, data: { confirm: 'Â¿Desea Borrar el Registro?' }, class: 'btn red white-text'  %></td>
                <%end%>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="row">
      <%= link_to 'Nueva Liquidacion', new_liquidation_path, class: 'btn blue white-text' %>
    </div>
    
    <div class="row">
      <%= will_paginate @liquidations %>
    </div>
  </div>
  
</div>
