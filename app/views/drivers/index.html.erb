<div class="row">
  <div class="col s12 m12 l12">
    <p id="notice"><%= notice %></p>

<div class="row">
  <h4 class="center-align">
    Lista de Choferes
  </h4>
</div>

<div class="row">
  <table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Paterno</th>
      <th>Materno</th>
      <th>Sindical</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= driver.nombre %></td>
        <td><%= driver.paterno %></td>
        <td><%= driver.materno %></td>
        <td><%= driver.sindical %></td>
        <td class="right">
        <%= link_to 'Ver', driver, class: 'btn blue' %>
        <%= link_to 'Editar', edit_driver_path(driver), class: 'btn' %>
        <%= link_to 'Eliminar', driver, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn red' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<div class="row">
  <%= link_to 'Nuevo Chofer', new_driver_path, class: 'btn blue' %>  
</div>


  </div>
</div>