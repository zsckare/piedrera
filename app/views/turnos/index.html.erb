
<h1>Listing Turnos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @turnos.each do |turno| %>
      <tr>
        <td><%= turno.nombre %></td>
        <td><%= link_to 'Show', turno %>
        <%= link_to 'Edit', edit_turno_path(turno) %>
        <% if current_user.nivel == 1 %>
        <%= link_to 'Destroy', turno, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Turno', new_turno_path %>
