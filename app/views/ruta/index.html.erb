<div class="row">
  <div class="col s12 m12 l12">
    <div class="row">
      <h4 class="center-align">Lista de Rutas</h4>
    </div>
    <div class="row">      
      <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @ruta.each do |rutum| %>
            <tr>
              <td><%= rutum.nombre %></td>
              <td class="right">
              <%= link_to 'Ver', rutum, class: 'btn blue' %>
              <%= link_to 'Editar', edit_rutum_path(rutum), class: 'btn' %>
              <%= link_to 'Eliminar', rutum, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn red' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="row">
      <%= link_to 'Nueva Ruta', new_rutum_path, class: 'btn blue' %>
    </div>




  </div>
</div>